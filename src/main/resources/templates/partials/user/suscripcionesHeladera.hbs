<div class="container">
    <h1>Suscripciones a Heladeras</h1>

    <form action="/site/user/suscripcionesHeladera" method="GET">
        <div class="search-bar">
            <input type="text" placeholder="Buscar Heladera" name="nombreHeladera" id="nombreHeladera">
            <button type="submit">üîç</button>
        </div>
    </form>
    <div class="seccion">
        <div class="sub-seccion">
            <p>Las heladeras actuales son:</p>
            <ul>
                {{#each heladeras}}
                    <li>
                        <span>
                            <h2>{{heladera.nombreSignificativo}}</h2>
                            Serial Number: {{heladera.serialNumber}}<br>
                            Direccion: {{heladera.direccion}}<br>
                            Peso: {{heladera.obtenerPeso}}
                        </span>
                        {{#if estaSuscripto}}
                            <div class="button-container">
                                <button onclick="window.location.href='/site/user/suscripcionesHeladera/{{heladera.id}}'">Administrar Suscripciones</button>
                            </div>
                        {{else}}
                            <div class="button-container">
                                <button onclick="window.location.href='/site/user/suscripcionesHeladera/{{heladera.id}}/nueva'">Suscribirse</button>
                            </div>
                        {{/if}}

            {{/each}}
            </ul>
        </div>
    </div>
</div>

{{> paginacion}}
