<h2 class="labelColor">Datos persona vulnerable:</h2>
<div class="field-group">
    <label for="tipo_documento" class="labelColor">Tipo documento:</label>
    <select id="tipo_documento" name="tipo_documento">
        <option value="" disabled selected>Selecciona un tipo de documento</option>
        <option value="DNI">DNI</option>
        <option value="LE">LE</option>
        <option value="LC">LC</option>
    </select>
</div>

<div class="field-group">
    <label for="numero_documento" class="labelColor">Numero Documento:</label>
    <input type="number" id="numero_documento" name="numero_documento" required>
</div>

<div class="field-group">
    <label for="nombre" class="labelColor">Nombre:</label>
    <input type="text" id="nombre" name="nombre" required>
</div>

<div class="field-group">
    <label for="fecha_nacimiento" class="labelColor">Fecha de Nacimiento:</label>
    <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" required>
</div>

<div class="field-group">
    <label for="situacion_de_calle" class="labelColor">Situacion de calle:</label>
    <input type="checkbox" id="situacion_de_calle" name="situacion_de_calle" >
</div>

<div class="field-group">
    <label for="direccion" class="labelColor">Direccion:</label>
    <input type="text" id="direccion" name="direccion" required>
</div>

<div class="field-group">
    <label for="cantidad_menores_a_cargo" class="labelColor">Cantidad menores a cargo:</label>
    <input type="number" id="cantidad_menores_a_cargo" name="cantidad_menores_a_cargo" required>
</div>

<div class="form-floating">
    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
    <label for="floatingTextarea2">Descripcion</label>
</div>
